<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spaces_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/superhero_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/superhero_card_background"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/superhero_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/superhero_card_image_height"
                android:scaleType="centerInside"
                tools:src="@drawable/captain_america" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/superhero_card_divider" />

            <TextView
                android:id="@+id/superhero_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/standard_text_size"
                android:textStyle="bold"
                tools:text="Captain America" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
